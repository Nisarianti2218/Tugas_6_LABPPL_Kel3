<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <title>Buku Tamu Pesta Ulang Tahun</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 600px;
      margin: 2rem auto;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    input,
    textarea {
      padding: 0.5rem;
      font-size: 1rem;
    }

    .flash {
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 4px;
    }

    .success {
      background-color: #d4edda;
      color: #155724;
    }

    .error {
      background-color: #f8d7da;
      color: #721c24;
    }

    a {
      margin-top: 1rem;
      display: inline-block;
    }
  </style>
</head>

<body>
  <h1>Buku Tamu Pesta Ulang Tahun</h1>

  <% if (messages && messages.length> 0) { %>
    <div class="flash success">
      <%= messages[0] %>
    </div>
    <% } %>

      <% if (locals.flash && locals.flash.error && locals.flash.error.length> 0) { %>
        <div class="flash error">
          <%= locals.flash.error[0] %>
        </div>
        <% } %>

          <form action="/submit" method="POST">
            <input type="text" name="name" placeholder="Nama lengkap" required />
            <input type="email" name="email" placeholder="Email" required />
            <textarea name="message" rows="4" placeholder="Pesan" required></textarea>
            <button type="submit">Kirim</button>
          </form>

          <a href="/list">Lihat daftar tamu</a>
</body>

</html>
